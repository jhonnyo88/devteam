# ======================
# DigiNativa AI Team Configuration
# ======================

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO_OWNER=jhonnyo88
GITHUB_REPO_NAME=multi-agent-setup

# OpenAI Configuration (f√∂r CrewAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=localhost
API_PORT=8000
API_RELOAD=true

# State Management
STATE_STORAGE_PATH=data/agent_states/
BACKUP_INTERVAL_SECONDS=30
MAX_STATE_AGE_HOURS=24

# Quality Gates Thresholds
MIN_TEST_COVERAGE=100
MAX_API_RESPONSE_TIME_MS=200
MIN_LIGHTHOUSE_SCORE=90

# Contract Validation
CONTRACT_SCHEMA_PATH=docs/contracts/agent_contract_schema.json
DNA_DOCS_PATH=docs/dna/

# Logging
LOG_FILE_PATH=logs/ai_team.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false

# Database (for future use)
DATABASE_URL=sqlite:///data/ai_team.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Netlify Deployment (for product repo)
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_auth_token

# Monitoring and Alerts
ENABLE_MONITORING=true
ALERT_EMAIL=team@diginativa.com
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK